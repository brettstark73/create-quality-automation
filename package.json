{
  "name": "create-quality-automation",
  "version": "2.2.1",
  "description": "Bootstrap quality automation for JavaScript/TypeScript and Python projects with GitHub Actions, pre-commit hooks, linting, and formatting",
  "main": "setup.js",
  "bin": {
    "create-quality-automation": "./setup.js"
  },
  "scripts": {
    "prepare": "husky",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .js,.jsx,.mjs,.cjs,.html && stylelint \"**/*.{css,scss,sass,less,pcss}\" --allow-empty-input",
    "lint:fix": "eslint . --ext .js,.jsx,.mjs,.cjs,.html --fix && stylelint \"**/*.{css,scss,sass,less,pcss}\" --fix --allow-empty-input",
    "security:audit": "npm audit --audit-level high",
    "security:secrets": "node -e \"const fs=require('fs');const content=fs.readFileSync('package.json','utf8');if(/[\\\"\\'][a-zA-Z0-9+/]{20,}[\\\"\\']/.test(content)){console.error('❌ Potential hardcoded secrets in package.json');process.exit(1)}else{console.log('✅ No secrets detected in package.json')}\"",
    "security:config": "node setup.js --security-config",
    "validate:docs": "node setup.js --validate-docs",
    "validate:comprehensive": "node setup.js --comprehensive",
    "validate:all": "npm run validate:comprehensive && npm run security:audit",
    "test": "node tests/setup.test.js",
    "docs:check": "bash scripts/check-docs.sh",
    "prerelease": "npm run docs:check && npm run validate:comprehensive && npm test",
    "setup": "node setup.js"
  },
  "keywords": [
    "quality",
    "automation",
    "prettier",
    "husky",
    "lint-staged",
    "github-actions",
    "template",
    "bootstrap",
    "scaffold",
    "python",
    "javascript",
    "typescript",
    "black",
    "ruff",
    "mypy",
    "pre-commit"
  ],
  "author": "Brett Stark",
  "license": "MIT",
  "files": [
    "setup.js",
    "config/",
    "lib/",
    ".github/",
    ".prettierrc",
    ".prettierignore",
    "eslint.config.cjs",
    "eslint.config.ts.cjs",
    ".stylelintrc.json",
    ".editorconfig",
    ".nvmrc",
    ".npmrc"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brettstark73/quality-automation-template.git"
  },
  "bugs": {
    "url": "https://github.com/brettstark73/quality-automation-template/issues"
  },
  "homepage": "https://github.com/brettstark73/quality-automation-template#readme",
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "eslint": "^9.12.0",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^15.9.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "stylelint": "^16.8.0",
    "stylelint-config-standard": "^37.0.0"
  },
  "volta": {
    "node": "20.11.1",
    "npm": "10.2.4"
  },
  "lint-staged": {
    "package.json": [
      "prettier --write"
    ],
    "!(node_modules)/**/*.{css,scss,sass,less,pcss}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "!(node_modules)/**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "!(node_modules)/**/*.{js,jsx,mjs,cjs,html}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{js,jsx,mjs,cjs,html}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "**/*.{css,scss,sass,less,pcss}": [
      "stylelint --fix",
      "prettier --write"
    ]
  }
}
