{
  "name": "quality-automation-template",
  "version": "1.0.0",
  "description": "Reusable quality automation setup with GitHub Actions, Husky, lint-staged, and Prettier",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.html && stylelint \"**/*.{css,scss}\" --allow-empty-input",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.html --fix && stylelint \"**/*.{css,scss}\" --fix --allow-empty-input",
    "test": "echo 'Add your testing command here'",
    "setup": "node setup.js"
  },
  "keywords": [
    "quality",
    "automation",
    "prettier",
    "husky",
    "lint-staged",
    "github-actions",
    "template"
  ],
  "author": "Brett Stark",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "eslint": "^8.57.0",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0"
  },
  "volta": {
    "node": "20.11.1",
    "npm": "10.2.4"
  },
  "lint-staged": {
    "package.json": [
      "prettier --write"
    ],
    "**/*.{js,jsx,ts,tsx,html}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{css,scss}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
